@model QuestionVM

<section class="survey">
    <div class="container">

        @if (Model is not null)
        {

            <h1>Question @Model.CurrentPage of @Model.TotalPages</h1>

            <p>@Model.Question.QuestionText</p>

            @if (Model.Question.Options != null && Model.Question.Options.Any())
            {
                <ul>
                    @foreach (var option in Model.Question.Options)
                    {
                        <li>
                            <input type="checkbox" name="selectedOptions" value="@option.Id" /> @option.Value
                        </li>
                    }
                </ul>
            }

            <div>
                @if (Model.CurrentPage > 1)
                {
                    <a href="@Url.Action("Index", new { pageNumber = Model.CurrentPage - 1 })">Previous</a>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <a href="@Url.Action("Index", new { pageNumber = Model.CurrentPage + 1 })">Next</a>
                }
            </div>

        }
        else
        {

            <div class="completed-container">
                <div class="completed-message">
                    <h2>Inga tillgängliga frågor.</h2>
                    <p>Var god försök igen senare.</p>
                </div>
            </div>

        }

    </div>
</section>

<style>
    .completed-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
    }

    .completed-message {
        text-align: center;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .completed-message h2 {
            margin-bottom: 10px;
            color: #333;
        }

        .completed-message p {
            color: #666;
        }
</style>